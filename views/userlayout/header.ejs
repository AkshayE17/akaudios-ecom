          <ul class="navbar-nav justify-content-start flex-grow-1 gap-1">
            <li class="nav-item">
              <a class="nav-link" href="/">Home</a>
            </li>
         
            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle dropdown-toggle-nocaret" href="#" data-bs-toggle="dropdown">
                  Categories
              </a>
              <ul class="dropdown-menu">
                  <% categories.forEach(category => { %>
                      <li><a class="dropdown-item" href="#"><%= category.categoryName %></a></li>
                  <% }); %>
              </ul>
          </li>
          
          
          
          <li class="nav-item">
            <a class="nav-link" href="/productfilter">Shop</a>
          </li>
              
          <% if (req.session.userId) { %> 
            <li class="nav-item">
              <a class="nav-link" href="/logout">Logout</a> 
            </li>
          <% } else { %> 
            <li class="nav-item">
              <a class="nav-link" href="/login">Login</a> 
            </li>
          <% } %>
          
          </ul>
        </div>
      </div>
      <% if (req.session.userId) { %>
        <ul class="navbar-nav secondary-menu flex-row">
    
          <li class="nav-item">
            <a class="nav-link" href="/cart/wishlist"><i class="bi bi-suit-heart"></i></a>
          </li>
          <li class="nav-item" data-bs-toggle="offcanvas" data-bs-target="#offcanvasRight">
            <a class="nav-link position-relative" href="/cart/loadcart">
              <div id="cartBadge" class="cart-badge">0</div>
              <i class="bi bi-basket2"></i>
            </a>
          </li>
          
          <li class="nav-item">
            <a class="nav-link" href="/userdashboard"><i class="bi bi-person-circle"></i></a>
          </li>
        </ul>
      <% } %>
      
    </nav>
