<%- include('../adminlayout/header.ejs') %>

<div class="row">
  <div class="col-lg-6">
    <div class="card mb-4">
      <div class="card-header">
        <h4>Edit Banner</h4>
      </div>
      <div class="card-body">
        <form action="/admin/banner/editbanner/<%= banner._id %>" method="POST" enctype="multipart/form-data">
          <!-- Title -->
          <div class="form-group">
            <label for="title">Title</label>
            <input type="text" class="form-control" id="title" name="title" value="<%= banner.title %>">
          </div>
          <!-- Subtitle -->
          <div class="form-group">
            <label for="subtitle">Subtitle</label>
            <input type="text" class="form-control" id="subtitle" name="subtitle" value="<%= banner.subtitle %>">
          </div>
          <!-- Color -->
          <div class="form-group">
            <label for="color">Color</label>
            <input type="text" class="form-control" id="color" name="color" value="<%= banner.color %>">
          </div>
          <!-- Update Button -->
          <button type="submit" class="btn btn-primary">Update</button>
        </form>
      </div>
    </div>
  </div>
  <div class="col-lg-6">
    <div class="card mb-4">
      <div class="card-header">
        <h4>Current Image</h4>
      </div>
      <div class="card-body">
        <img src="/banners/<%= banner.image %>" alt="Current Banner Image" style="max-width: 100%; height: auto;">
      </div>
    </div>
  </div>
</div>

<%- include('../adminlayout/footer.ejs') %>
