    <section class="content-main">
      <div class="content-header">
          <div class="row align-items-center">
              <div class="col-md-4"></div>
  
              <!-- Display success or error messages if any -->
              <% if (typeof success !== 'undefined' && msg) { %>
                  <div class="alert <% if (success) { %>alert-success<% } else { %>alert-danger<% } %>" role="alert">
                      <%= msg %>
                  </div>
              <% } %>
  
              <div class="col-md-4 text-center">
                  <h2 class="content-title card-title">Edit Category</h2>
              </div>
  
              <div class="col-md-4 text-center">
                  <!-- Use the category data to pre-fill the form if category is defined -->
                  <% if (category) { %>
                    <form id="editCategoryForm" action="/admin/category/editCategory/<%= category._id %>" method="post" enctype="multipart/form-data" class="p-5 border rounded" style="width: 400px;">
                      <div class="mb-3">
                          <label for="editCategoryName" class="form-label">Category Name</label>
                          <input type="text" class="form-control" name="editCategoryName" value="<%= category.categoryName %>" required>
                      </div>
                      <div class="mb-3">
                          <label for="editCategoryImage" class="form-label">Category Image</label>
                          <div class="input-group">
                              <input type="file" class="form-control" name="editCategoryImage" accept="image/*">
                          </div>
                      </div>
                      <div class="mb-3 text-center">
                          <button type="submit" class="btn btn-primary">Update Category</button>
                      </div>
                  </form>
                  
                  <% } else { %>
                      <p>No category found.</p>
                  <% } %>
              </div>
          </div>
      </div>
  </section>
  

    
    
    
    
    
